pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World. This is my first Pipeline Project.'
            }
        } 
        stage('Build') {
            steps {
                echo 'Building'
            }
        } 
        stage('Deploy') {
            steps {
                echo 'Deployment'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Release') {
            steps {
                echo 'Released'
            }
        }
    }
}
